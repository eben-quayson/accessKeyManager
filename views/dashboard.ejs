<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Welcome, <%= user.email %>!</h1>
        <p>This is your dashboard.</p>

        <% if (user.is_admin) { %>
            <h2>All Access Keys</h2>
        <% } else { %>
            <h2>Your Access Keys</h2>
        <% } %>

        <table>
            <thead>
                <tr>
                    <th>Key</th>
                    <th>School ID</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <% accessKeys.forEach(key => { %>
                    <tr>
                        <td><%= key.key %></td>
                        <td><%= key.school_id %></td>
                        <td><%= key.is_active ? 'Active' : 'Inactive' %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <form action="/auth/signout" method="POST">
            <button type="submit">Sign Out</button>
        </form>
    </div>
</body>
</html>
